<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ice Cream</title>
    <link rel="stylesheet" href="css/style.css" />
  </head>
  <body>
    <div class="wrapper">
     
      <%- include('./layout/header') %> 
      <section class="top">
        <img
          src="/images/coldnyummy.png"
          alt="logo img"
          width="1200px"
          height="350px"
        />
      </section>
      
        
         
      <section class="flavors-loop">
        <div class="grid">
          <% for(let flavor of flavors){ %>
            <article class="flavor-card">
              <img src=<%= flavor.images %>  alt="images" width="200px" height="250px"/>
              <h3> <%= flavor.name %></h3>
              
              <% if( user ) { %>
                <form action="/vote?flavors_id=<%=flavor.id%>"  method="POST">
                  <p>Hi: <%= user.username %></p>
                  <button>VOTE</button>
                </form>
                <%} else { %>
                  <form action="/vote?flavors_id=<%=flavor.id%>"  method="POST">
                    <div class="card-container">
                      <input type="email" name="email" placeholder="Your Email" required/>
                      <button>VOTE</button>
                    </div>
                  </form>
                <% } %>


            </article>
            <% } %>
        </div>
      </section>
      
    </div>
    <%- include('./layout/footer') %> 
  </body>
</html>
